<div class="container max-width-300">
  <div class="d-flex flex-column align-items-center text-center">

    <h1 class="my-3 font-weight-normal">Log In</h1>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "w-100"}) do |f| %>
    <div class="form-group">
            <%= f.label :email, class: "sr-only" %>
            <%= f.email_field :email, autocomplete: "email", placeholder: "Email", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :password, class: "sr-only" %>
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "form-control" %>
          </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "mb-0" %>
        </div>
      <% end -%>

      <div class="form-group">
        <%= f.submit "Log in", class: "btn btn-success form-control" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>