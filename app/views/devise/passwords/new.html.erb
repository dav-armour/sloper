<div class="container max-width-300">
  <div class="d-flex flex-column align-items-center text-center">
    <h1 class="my-3 font-weight-normal">Forgot Password?</h1>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "w-100" }) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :email, class: "sr-only" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit "Reset Password", class: "btn btn-success form-control" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>