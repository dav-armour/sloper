<p id="notice"><%= notice %></p>

<h1>Listings</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Brand</th>
      <th>Daily price</th>
      <th>Weekly price</th>
      <th colspan="3"></th>
      <th>Image</th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><%= link_to listing.title, listing %></td>
        <td><%= listing.brand %></td>
        <td><%= listing.daily_price %></td>
        <td><%= listing.weekly_price %></td>
        <% if listing.listing_images.empty? %> 
          <td><%= image_tag asset_path("fallback/noimage.png")%></td>
        <% else %>
          <td><%= image_tag listing.listing_images.last.image.url %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Listing', new_listing_path %>
