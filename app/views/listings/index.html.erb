<p id="notice"><%= notice %></p>

<h1>Listings</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Description</th>
      <th>Category</th>
      <th>Type</th>
      <th>Size</th>
      <th>Brand</th>
      <th>Bindings</th>
      <th>Boots</th>
      <th>Helmet</th>
      <th>Daily price</th>
      <th>Weekly price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><%= listing.user %></td>
        <td><%= listing.title %></td>
        <td><%= listing.description %></td>
        <td><%= listing.category %></td>
        <td><%= listing.type %></td>
        <td><%= listing.size %></td>
        <td><%= listing.brand %></td>
        <td><%= listing.bindings %></td>
        <td><%= listing.boots %></td>
        <td><%= listing.helmet %></td>
        <td><%= listing.daily_price %></td>
        <td><%= listing.weekly_price %></td>
        <td><%= link_to 'Show', listing %></td>
        <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
        <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Listing', new_listing_path %>
