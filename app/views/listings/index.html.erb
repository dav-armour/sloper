<h1>Listings</h1>

<p>Total Listings: <%#= @listings.size %></p>

<%= form_with url: listings_path, method: :get, local: true do |form| %>
  <%= form.text_field :city %>
  <%= form.date_field :start_date %>
  <%= form.date_field :end_date %>
  <%= form.select :category, options_for_select(Listing.categories.keys.unshift("All")), required: true %>
  <%= form.select :item_type, options_for_select(Listing.item_types.keys.unshift("All")), required: true %>
  <%= form.text_field :brand, required: false %>

  <%= form.select :results_per_page, options_for_select([10,20,30]) %>
  <%= form.submit 'Search' %>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>City</th>
      <th>Category</th>
      <th>Type</th>
      <th>Brand</th>
      <th>Daily price</th>
      <th>Weekly price</th>
      <th>Image</th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><%= link_to listing.title, listing %></td>
        <td><%= listing.location.city %></td>
        <td><%= listing.category %></td>
        <td><%= listing.item_type %></td>
        <td><%= listing.brand %></td>
        <td><%= "$%0.2f" % (listing.daily_price/100.0) %></td>
        <td><%= "$%0.2f" % (listing.weekly_price/100.0) %></td>
        <% if listing.listing_images.empty? %>
          <td><%= image_tag asset_path("fallback/noimage.png")%></td>
        <% else %>
          <td><%= image_tag listing.listing_images.first.image.url %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Listing', new_listing_path %>
