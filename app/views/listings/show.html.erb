</p>
<%= link_to 'Back', listings_path %>
<% if @listing.user_id == current_user.id %>
| <%= link_to 'Edit', edit_listing_path(@listing) %> |
<%= link_to 'Destroy', @listing, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>

<%= form_with url: new_listing_booking_path(@listing), method: :get, local: true do |form| %>
  <%= form.fields_for :booking do |t| %>
    <div class="form-group">
      <%= t.label :start_date %>
      <%= t.date_field :start_date %>
    </div>
    <div class="form-group">
      <%= t.label :end_date %>
      <%= t.date_field :end_date %>
    </div>
  <% end %>
  <div class="actions">
    <%= form.submit 'Rent Now' %>
  </div>
<% end %>
